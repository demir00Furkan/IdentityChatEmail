@model IdentityChatEmail.Models.ProfileDetailViewModel
@{
	ViewData["Title"] = "ProfileDetail";
	Layout = "~/Views/Shared/_MessageLayout.cshtml";
	int count = 0;
}
<br />
<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Enson Gelen Mailler </div>
					</div>
					<div class="card-body">
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col" style="font-family: Arial; color: #333; font-weight: bold;">#</th>
									<th scope="col" style="font-family: Arial; color: #333; font-weight: bold;">Gönderen</th>
									<th scope="col" style="font-family: Arial; color: #333; font-weight: bold;">Konu</th>
									<th scope="col" style="font-family: Arial; color: #333; font-weight: bold;">Tarih</th>
									<th scope="col" style="font-family: Arial; color: #333; font-weight: bold;">Mesajı Aç</th>
									<th scope="col" style="font-family: Arial; color: #333; font-weight: bold;">Durum</th>
									<th scope="col" style="font-family: Arial; color: #333; font-weight: bold;">Sil</th>
								</tr>
							</thead>

							<tbody>

								@foreach (var item in Model.InboxMessages)
								{
									count++;
									<tr>
										<td>@count</td>
										<td> @item.SenderName @item.SenderSurname</td>
										<td>@item.Message.Subject</td>
										<td>@item.Message.SendDate.ToShortDateString()</td>
										<td><a href="/Message/MessageDetail/@item.Message.MessageId" class="btn btn-warning">Mesajı Aç</a></td>
										@if (item.Message.IsRead == true)
										{
											<td><a href="/Profile/ProfileIsReadToFalse/@item.Message.MessageId" class="btn btn-dark">Okunmadı Olarak İşaretle</a></td>
										}
										else
										{
											<td><a href="/Profile/ProfileIsReadToTrue/@item.Message.MessageId" class="btn btn-success">Okundu Olarak İşaretle </a></td>
										}
										<td><a href="/Profile/ProfileDeleteMail/@item.Message.MessageId" class="btn btn-danger">Sil</a></td>
									</tr>

								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Kullanıcı Bilgilerini Güncelle</div>
					</div>

					<div class="card-body">
						<form class="mt-5 mb-5 login-input" method="post">
							<div class="form-group">
								<label><b>Adınız</b></label>
								<input type="text" class="form-control" placeholder="Adınız" asp-for="User.Name" required>
							</div>
							<div class="form-group">
								<label><b>Soyadınız</b></label>
								<input type="text" class="form-control" placeholder="Soyadınız " asp-for="User.Surname" required>
							</div>
							<div class="form-group">
								<label><b>Kullanıcı Adınız</b></label>
								<input type="text" class="form-control" placeholder="Kullanıcı Adınız " asp-for="User.Username" required>
							</div>
							<div class="form-group">
								<label><b>Mail Adresiniz</b></label>
								<input type="email" class="form-control" placeholder="Email Adresiniz" asp-for="User.Email" required>
							</div>
							<div class="form-group">
								<label><b>Şifreniz</b></label>
								<input type="password" class="form-control" placeholder="Şifreniz" asp-for="User.Password" required>
							</div>
							<div class="text-danger" asp-validation-summary="ModelOnly"></div>
							<button class="btn login-form__btn submit w-100">Güncelle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>